<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="shadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="logo" parent="shadow">
        <item name="android:textSize">@dimen/logo_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginLeft">@dimen/spacer</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/title</item>
    </style>

    <style name="h1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/PrimaryText</item>
        <item name="android:textSize">@dimen/h1_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margins</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2">
        <item name="android:textColor">@color/SecondaryText</item>
        <item name="android:textSize">@dimen/h2_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margins</item>
        <item name="android:layout_marginBottom">@dimen/margins3</item>
    </style>

    <style name="icon">
        <item name="android:layout_marginLeft">@dimen/margins</item>
        <item name="android:layout_marginBottom">@dimen/margins</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>
